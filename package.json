{
	"name": "appc.redis",
	"description": "Redis connector for Arrow",
	"version": "2.1.6",
	"author": "Isaac Whitfield",
	"license": "Apache-2.0",
	"framework": "none",
	"keywords": [
		"arrow",
		"arrow-connector",
		"appcelerator",
		"redis",
		"redis-server"
	],
	"repository": {
		"type": "git",
		"url": "git@github.com:appcelerator/appc.redis.git"
	},
	"files": [
    "dist"
  ],
  "main": "dist/index.js",
	"private": true,
	"dependencies": {
		"async": "1.5.0",
		"ioredis": "1.13.1",
		"lodash": "3.10.1",
		"pkginfo": "0.3.1"
	},
	"devDependencies": {
		"arrow": "*",
		"babel-cli": "^6.11.4",
    "babel-core": "^6.0.0",
    "babel-istanbul": "^0.12.1",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-stage-2": "^6.22.0",
		"grunt": "0.4.5",
		"grunt-mocha-test": "^0.12.0",
		"mocha": "2.3.4",
		"mockery": "2.0.0",
		"nsp": "2.6.3",
		"nyc": "10.1.2",
		"retire": "1.2.12",
		"rimraf": "2.6.1",
		"should": "8.0.2",
    "sinon": "2.1.0",
		"snazzy": "6.0.0",
		"standard": "9.0.1",
		"tap": "10.3.0"
	},
	"scripts": {
		"start": "appc run",
		"lint": "standard --fix | snazzy",
		"build": "npm run clean && npm run build:dev && npm run security",
    "build:dev": "npm run build:dist",
    "build:dist": "babel -d ./dist ./lib",
		"security": "retire --exitwith 0 --outputpath scan-retire.json && nsp check --output json > scan-nsp.json",
		"clean": "rimraf ./tmp && rimraf dist/* coverage/*",
		"test": "npm run security && npm run test:unit && npm run clean",
		"test:coverage": "nyc check-coverage --lines 90 --functions 90 --branches 70 --statements 90",
		"test:unit": "tap ./test/unit/* --color --bail --cov --coverage-report=html && npm run test:coverage",
		"test:integration": "grunt"
	},
	"standard": {
		"ignore": [
			"test/integration/**"
		]
	}
}
